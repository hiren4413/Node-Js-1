<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<body>

    <div align="center">
        <h1>add User</h1>
        <form action="/insertUser" method="post">
            <table border="1">
                <tr>
                    <td>Name:-</td>
                    <td><input type="text" name="name"></td>
                </tr>
                <tr>
                    <td>Email:-</td>
                    <td><input type="text" name="email"></td>
                </tr>
                <tr>
                    <td>Password:-</td>
                    <td><input type="password" name="password"></td>
                </tr>
                <tr>
                    <td>Gender:-</td>
                    <td>
                        <input type="radio" name="gender" value="male">Male
                        <input type="radio" name="gender" value="female">Female
                    </td>
                </tr>
                <tr>
                    <td>Hobby:-</td>
                    <td>
                        <input type="checkbox" name="hobby" value="travelling">Travelling
                        <input type="checkbox" name="hobby" value="photography">Photography
                        <input type="checkbox" name="hobby" value="gaming">Gaming
                        <input type="checkbox" name="hobby" value="coding">Coding
                    </td>
                </tr>
                <tr>
                    <td>City:-</td>
                    <td>
                        <select name="city">
                            <option>---select city---</option>

                            <% const city=["surat","Ahemdabad","Rajkot","Bharuch"]; 
                            city.map((ci)=>{
                            %>
                                    <option value="<%= ci %>"><%= ci %></option>

                                <% }) %>
                        </select>
                    </td>
                </tr>
                <tr>
                    <td>Number:-</td>
                    <td><input type="number" name="number"></td>
                </tr>
                <tr>
                    <td></td>
                    <td><input type="submit"></td>
                </tr>
            </table>
        </form>
        <a href="/">View</a>

    </div>

</body>

</html>